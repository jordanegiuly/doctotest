<div class="col-lg-12">
	<h1 class="page-header">Welcome to DoctoTest!</h1>
	
	<p class="lead">
		Here is a list of our top professionals based in Paris:
	</p>
</div>

<div class="col-lg-5">
	<ul class="list-group">
		<% @users.each do |user| %>
			<li class="list-group-item">
	    		<span class="badge"><%= user.id %></span>
	    		<h4 style="margin: 0;"><%= user.first_name %> <%= user.last_name %></h4>
	    		<div>
	    			<%= user.specialty %>
	    			<br />
	    			<%= user.address %>, <%= user.postal_code %> <%= user.city %>
	    		</div>
			</li>
		<% end %>
	</ul>
</div>

<div class="col-lg-7">
	<img src="http://maps.googleapis.com/maps/api/staticmap?size=600x300&maptype=roadmap<%= @google_map_addresses %>", 
		 alt="Google Maps" />
</div>
